{
  "name": "opencode-audit-plugin",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "opencode-audit": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun && bun build src/cli.ts --outdir dist --target bun",
    "dev": "bun build src/index.ts --outdir dist --target bun --watch",
    "typecheck": "tsc --noEmit",
    "cli": "bun run src/cli.ts"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.20"
  },
  "devDependencies": {
    "@types/bun": "^1.2.10",
    "@types/node": "^22.13.9",
    "typescript": "^5.8.2"
  },
  "opencode": {
    "plugin": true
  }
}
