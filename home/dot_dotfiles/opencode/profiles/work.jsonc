{
  "$schema": "https://opencode.ai/config.json",
  "theme": "chess-com",
  "instructions": ["~/.dotfiles/opencode/rules/work.md"],

  // Model selection and profile-specific permission overrides
  // Agent behavior is defined in agents/*.md files
  "agent": {
    // Primary agents
    "build": {
      "model": "github-copilot/claude-opus-4.5",
    },
    "plan": {
      "model": "github-copilot/claude-sonnet-4.5",
    },

    // Built-in subagents
    "explore": {
      "model": "github-copilot/claude-haiku-4.5",
    },
    "compact": {
      "model": "github-copilot/claude-haiku-4.5",
    },

    // Custom subagents - model and work-specific MCP permissions
    "coder": {
      "model": "github-copilot/claude-opus-4.5",
    },
    "reviewer": {
      "model": "github-copilot/claude-sonnet-4",
      "permission": {
        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "architect": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",

        "notion_notion-search": "allow",
        "notion_notion-fetch": "allow",
        "notion_notion-get-comments": "allow",
        "notion_notion-get-teams": "allow",
        "notion_notion-get-users": "allow",
        "notion_notion-query-data": "allow",
        "notion_notion-get-self": "allow",
        "notion_notion-get-user": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "devops": {
      "model": "github-copilot/claude-opus-4.5",
      "permission": {
        "github_*": "allow",
      },
    },
    "writer": {
      "model": "github-copilot/claude-sonnet-4",
      "permission": {
        "github_*": "allow",
        "jira_*": "allow",
        "notion_*": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "researcher": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",
        "jira_search": "allow",

        "notion_notion-search": "allow",
        "notion_notion-fetch": "allow",
        "notion_notion-get-comments": "allow",
        "notion_notion-get-teams": "allow",
        "notion_notion-get-users": "allow",
        "notion_notion-query-data": "allow",
        "notion_notion-get-self": "allow",
        "notion_notion-get-user": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "git": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "github_*": "allow",
      },
    },
    "creative": {
      "model": "github-copilot/claude-sonnet-4.5",
    },
  },

  "mcp": {
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "--network=none",
        "--memory=512m",
        "--cpus=1",
        "-v",
        "mcp-memory-work:/app/dist",
        "mcp/memory",
      ],
      "enabled": true,
    },
    "jira": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true,
    },
    "notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp",
      "enabled": true,
    },
    "slack": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "--memory=512m",
        "--cpus=1",
        "-e",
        "SLACK_MCP_XOXC_TOKEN={env:SLACK_MCP_XOXC_TOKEN}",
        "-e",
        "SLACK_MCP_XOXD_TOKEN={env:SLACK_MCP_XOXD_TOKEN}",
        "-e",
        "SLACK_MCP_ADD_MESSAGE_TOOL={env:SLACK_MCP_ALLOWED_CHANNELS}",
        "ghcr.io/korotovsky/slack-mcp-server",
        "mcp-server",
        "--transport",
        "stdio",
      ],
      "enabled": true,
    },
  },
}
