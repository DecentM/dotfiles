{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    // MCPs denied at global level - specialized agents get access
    "github_*": "deny",
    "grafana_*": "deny",
  },
  "instructions": ["~/.dotfiles/opencode/rules/personal.md"],
  "agent": {
    // Global agents: only homeassistant (home automation isn't code-specific)
    "build": {
      "model": "openrouter/minimax/minimax-m1",
      "permission": {
        "homeassistant_*": "allow",
      },
    },
    "plan": {
      "model": "openrouter/minimax/minimax-m1",
      "permission": {
        "homeassistant_Get*": "allow",
        "homeassistant_todo_get_items": "allow",
      },
    },

    "coder": {
      "model": "openrouter/minimax/minimax-m2.1",
    },
    "reviewer": {
      "model": "openrouter/minimax/minimax-m2.1",
      "permission": {
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_pull_request_read": "allow",
        "github_issue_read": "allow",
        "github_search_*": "allow",

        "grafana_get_*": "allow",
        "grafana_list_*": "allow",
        "grafana_query_*": "allow",
        "grafana_search_*": "allow",
      },
    },
    "architect": {
      "model": "openrouter/minimax/minimax-m2.1",
      "permission": {
        "grafana_get_*": "allow",
        "grafana_list_*": "allow",
        "grafana_search_*": "allow",
      },
    },
    "devops": {
      "model": "openrouter/minimax/minimax-m2.1",
      "permission": {
        "grafana_*": "allow",
      },
    },
    "writer": {
      "model": "openrouter/deepseek/deepseek-v3.2",
      "permission": {
        "github_*": "allow",
      }
    },
    "researcher": {
      "model": "openrouter/deepseek/deepseek-v3.2",
      "permission": {
        "grafana_get_*": "allow",
        "grafana_list_*": "allow",
        "grafana_query_*": "allow",
        "grafana_fetch_*": "allow",
        "grafana_search_*": "allow",
        "grafana_find_*": "allow",
      },
    },
    "git": {
      "model": "openrouter/minimax/minimax-m2.1",
    },
    "creative": {
      "model": "openrouter/deepseek/deepseek-v3.2",
    },
  },
  "mcp": {
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "--network=none",
        "--memory=512m",
        "--cpus=1",
        "-v",
        "mcp-memory:/app/dist",
        "mcp/memory",
      ],
      "enabled": true,
    },
    "homeassistant": {
      "type": "remote",
      "url": "https://hass.cluster.arpa/api/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {HOMEASSISTANT_TOKEN}",
      },
    },
    "grafana": {
      "type": "remote",
      "url": "https://mcp-grafana.cluster.arpa/sse",
      "enabled": true,
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_TOKEN}",
      },
    },
  },
}
