{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    // MCPs
    "github_get_*": "allow",
    "github_list_*": "allow",
    "github_*read": "allow",
    "github_search_*": "allow",

    "grafana_get_*": "allow",
    "grafana_list_*": "allow",
    "grafana_query_*": "allow",
    "grafana_fetch_*": "allow",
    "grafana_search_*": "allow",
    "grafana_find_*": "allow",

    "homeassistant_Get*": "allow",
    "homeassistant_todo_get_items": "allow",
  },
  "agent": {
    "build": {
      "permission": {
        "github_request_copilot_review": "deny",
        "grafana_*": "allow",
        "homeassistant_Hass*": "allow",
        "homeassistant_tts_with_interruption": "allow",
      },
    },
    "plan": {
      "permission": {
        "github_fork_repository": "deny",
        "github_add_*": "deny",
        "github_create_*": "deny",
        "github_delete_*": "deny",
        "github_merge_*": "deny",
        "github_*write": "deny",
        "github_push_files": "deny",
        "github_assign_copilot_to_issue": "deny",
        "github_request_copilot_review": "deny",
        "github_update_*": "deny",

        "grafana_generate_*": "deny",
        "grafana_create_*": "deny",
        "grafana_update_*": "deny",
        "grafana_patch_*": "deny",
        "grafana_add_*": "deny",
        "grafana_delete_*": "deny",

        "homeassistant_Hass*": "deny",
        "homeassistant_tts_with_interruption": "deny",
      },
    },
  },
  "mcp": {
    "homeassistant": {
      "type": "remote",
      "url": "https://hass.cluster.arpa/api/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {file:~/.config/opencode/secrets/hass_token}",
      },
    },
    "grafana": {
      "type": "remote",
      "url": "https://mcp-grafana.cluster.arpa/sse",
      "enabled": true,
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {file:~/.config/opencode/secrets/gh_pat}",
      },
    },
  },
}
