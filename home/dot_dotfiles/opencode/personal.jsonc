{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    // MCPs denied at global level - specialized agents get access
    "github_*": "deny",
    "grafana_*": "deny",
  },
  "instructions": ["~/.dotfiles/opencode/rules/personal.md"],
  "agent": {
    // Global agents: only homeassistant (home automation isn't code-specific)
    "build": {
      "model": "openrouter/anthropic/claude-3.7-sonnet",
      "permission": {
        "homeassistant_*": "allow",
      },
    },
    "plan": {
      "model": "openrouter/anthropic/claude-3.7-sonnet",
      "permission": {
        "homeassistant_Get*": "allow",
        "homeassistant_todo_get_items": "allow",
      },
    },

    // Specialized agents with MCP access
    "coder": {
      "model": "openrouter/qwen3-coder",
    },
    "reviewer": {
      "model": "openrouter/qwen3-coder",
      "permission": {
        // Read-only GitHub for PR reviews
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_pull_request_read": "allow",
        "github_issue_read": "allow",
        "github_search_*": "allow",
        // Read-only Grafana for performance context
        "grafana_get_*": "allow",
        "grafana_list_*": "allow",
        "grafana_query_*": "allow",
        "grafana_search_*": "allow",
      },
    },
    "architect": {
      "model": "openrouter/qwen3-coder",
      "permission": {
        // Read-only GitHub for design research
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_search_*": "allow",
        // Read-only Grafana for system understanding
        "grafana_get_*": "allow",
        "grafana_list_*": "allow",
        "grafana_search_*": "allow",
      },
    },
    "devops": {
      "model": "openrouter/qwen3-coder",
      "permission": {
        // Full GitHub for CI/CD workflows
        "github_*": "allow",
        "github_request_copilot_review": "deny",
        // Full Grafana for dashboards and alerts
        "grafana_*": "allow",
      },
    },
    "writer": {
      "model": "openrouter/z-ai/glm-4.6",
      "permission": {
        // Full GitHub for PR descriptions, release notes
        "github_*": "allow",
        "github_request_copilot_review": "deny",
      },
    },
    "researcher": {
      "model": "openrouter/z-ai/glm-4.6",
      "permission": {
        // Read-only GitHub for code research
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_search_*": "allow",
        // Read-only Grafana for data/metrics research
        "grafana_get_*": "allow",
        "grafana_list_*": "allow",
        "grafana_query_*": "allow",
        "grafana_fetch_*": "allow",
        "grafana_search_*": "allow",
        "grafana_find_*": "allow",
      },
    },
    "git": {
      "model": "openrouter/qwen/qwen3-coder",
      "permission": {
        // Read-only GitHub for remote operations
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_pull_request_read": "allow",
        "github_search_*": "allow",
      },
    },
    "creative": {
      "model": "github-copilot/z-ai/glm-4.6",
    },
  },
  "mcp": {
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-v",
        "mcp-memory:/app/dist",
        "mcp/memory",
      ],
      "enabled": true,
    },
    "homeassistant": {
      "type": "remote",
      "url": "https://hass.cluster.arpa/api/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {file:~/.config/opencode/secrets/hass_token}",
      },
    },
    "grafana": {
      "type": "remote",
      "url": "https://mcp-grafana.cluster.arpa/sse",
      "enabled": true,
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {file:~/.config/opencode/secrets/gh_pat}",
      },
    },
  },
}
