{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "permission": {
    "github_*": "deny",
    "jira_*": "deny",
    "notion_*": "deny",
  },
  "instructions": ["~/.dotfiles/opencode/rules/work.md"],
  "agent": {
    "build": {
      "model": "github-copilot/claude-opus-4.5",
      "permission": {
        "github_*": "allow",
        "jira_*": "allow",
        "notion_*": "allow",
      },
    },
    "plan": {
      "model": "github-copilot/gemini-2.0-flash-001",
      "permission": {
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_*read": "allow",
        "github_search_*": "allow",

        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",
        "jira_search": "allow",

        "notion_notion-search": "allow",
        "notion_notion-fetch": "allow",
        "notion_notion-get-comments": "allow",
        "notion_notion-get-teams": "allow",
        "notion_notion-get-users": "allow",
        "notion_notion-query-data": "allow",
        "notion_notion-get-self": "allow",
        "notion_notion-get-user": "allow",
      },
    },
  },
  "mcp": {
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-v",
        "mcp-memory-work:/app/dist",
        "mcp/memory",
      ],
      "enabled": true,
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {file:~/.config/opencode/secrets/gh_pat}",
      },
    },
    "jira": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true,
    },
    "notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp",
      "enabled": true,
    },
  },
}
