{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "instructions": ["~/.dotfiles/opencode/rules/work.md"],

  // Work-specific MCP permissions - denied at profile level, agents get selective access
  "permission": {
    "github_*": "deny",
    "jira_*": "deny",
    "notion_*": "deny",
    "slack_*": "deny",
    "{env:WORK_MCP_NAME}_*": "deny",
  },

  // Model selection and profile-specific permission overrides
  // Agent behavior is defined in agents/*.md files
  "agent": {
    // Primary agents
    "build": {
      "model": "github-copilot/claude-opus-4.5",
    },
    "plan": {
      "model": "github-copilot/claude-sonnet-4.5",
    },

    // Built-in subagents
    "general": {
      "model": "github-copilot/claude-sonnet-4.5",
    },
    "explore": {
      "model": "github-copilot/claude-haiku-4.5",
    },
    "compact": {
      "model": "github-copilot/claude-haiku-4.5",
    },

    // Custom subagents - model and work-specific permissions
    "coder": {
      "model": "github-copilot/claude-opus-4.5",
    },
    "reviewer": {
      "model": "github-copilot/claude-sonnet-4",
      "permission": {
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_pull_request_read": "allow",
        "github_issue_read": "allow",
        "github_search_*": "allow",

        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "architect": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_search_*": "allow",

        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",

        "notion_notion-search": "allow",
        "notion_notion-fetch": "allow",
        "notion_notion-get-comments": "allow",
        "notion_notion-get-teams": "allow",
        "notion_notion-get-users": "allow",
        "notion_notion-query-data": "allow",
        "notion_notion-get-self": "allow",
        "notion_notion-get-user": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "devops": {
      "model": "github-copilot/claude-opus-4.5",
      "permission": {
        "github_*": "allow",
      },
    },
    "writer": {
      "model": "github-copilot/claude-sonnet-4",
      "permission": {
        "github_*": "allow",
        "jira_*": "allow",
        "notion_*": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "researcher": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "{env:WORK_MCP_NAME}_get": "allow",
        "{env:WORK_MCP_NAME}_list": "allow",
        "{env:WORK_MCP_NAME}_traverse": "allow",
        "{env:WORK_MCP_NAME}_batch_get": "allow",
        "{env:WORK_MCP_NAME}_search": "allow",
        "{env:WORK_MCP_NAME}_aggregate": "allow",
        "{env:WORK_MCP_NAME}_tag_list": "allow",
        "{env:WORK_MCP_NAME}_get_paths": "allow",
        "{env:WORK_MCP_NAME}_list_mounts": "allow",
        "{env:WORK_MCP_NAME}_validate": "allow",
        "{env:WORK_MCP_NAME}_validate_keyspace": "allow",
        "{env:WORK_MCP_NAME}_analyze_keyspace": "allow",
        "{env:WORK_MCP_NAME}_list_assignments": "allow",
        "{env:WORK_MCP_NAME}_pipe_read": "allow",
        "{env:WORK_MCP_NAME}_analyze_image": "allow",
        "{env:WORK_MCP_NAME}_export": "allow",

        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_search_*": "allow",

        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",
        "jira_search": "allow",

        "notion_notion-search": "allow",
        "notion_notion-fetch": "allow",
        "notion_notion-get-comments": "allow",
        "notion_notion-get-teams": "allow",
        "notion_notion-get-users": "allow",
        "notion_notion-query-data": "allow",
        "notion_notion-get-self": "allow",
        "notion_notion-get-user": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "git": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "github_*": "allow",
      },
    },
    "creative": {
      "model": "github-copilot/claude-sonnet-4.5",
    },
  },

  "mcp": {
    "{env:WORK_MCP_NAME}": {
      "type": "local",
      "command": [
        "bash",
        "-c",
        "docker run --rm -i --init --network=host --memory=256m --cpus=0.5 -e MCP_REMOTE_URL={env:WORK_MCP_URL} -e SOCKS_PROXY={env:WORK_MCP_PROXY} -e MCP_TOKEN={env:WORK_MCP_TOKEN} $(docker build -q -f ~/.dotfiles/opencode/docker/mcp-socks-proxy.dockerfile ~/.dotfiles/opencode/docker)",
      ],
      "enabled": true,
    },
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "--network=none",
        "--memory=512m",
        "--cpus=1",
        "-v",
        "mcp-memory-work:/app/dist",
        "mcp/memory",
      ],
      "enabled": true,
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_TOKEN}",
      },
    },
    "jira": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true,
    },
    "notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp",
      "enabled": true,
    },
    "slack": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "--memory=512m",
        "--cpus=1",
        "-e",
        "SLACK_MCP_XOXC_TOKEN={env:SLACK_MCP_XOXC_TOKEN}",
        "-e",
        "SLACK_MCP_XOXD_TOKEN={env:SLACK_MCP_XOXD_TOKEN}",
        "ghcr.io/korotovsky/slack-mcp-server",
        "mcp-server",
        "--transport",
        "stdio",
      ],
      "enabled": true,
    },
  },
}
