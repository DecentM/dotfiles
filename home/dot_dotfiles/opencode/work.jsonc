{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "permission": {
    // MCPs denied at global level - specialized agents get access
    "github_*": "deny",
    "jira_*": "deny",
    "notion_*": "deny",
    "slack_*": "deny",
  },
  "instructions": ["~/.dotfiles/opencode/rules/work.md"],
  "agent": {
    // Global agents: reasoning models for orchestration
    "build": {
      "model": "github-copilot/claude-opus-4.5",
      "permission": {},
    },
    "plan": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {},
    },

    "coder": {
      "model": "github-copilot/claude-opus-4.5",
    },
    "reviewer": {
      "model": "github-copilot/claude-sonnet-4",
      "permission": {
        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "architect": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",

        "notion_notion-search": "allow",
        "notion_notion-fetch": "allow",
        "notion_notion-get-comments": "allow",
        "notion_notion-get-teams": "allow",
        "notion_notion-get-users": "allow",
        "notion_notion-query-data": "allow",
        "notion_notion-get-self": "allow",
        "notion_notion-get-user": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "devops": {
      "model": "github-copilot/claude-opus-4.5",
    },
    "writer": {
      "model": "github-copilot/claude-sonnet-4",
      "permission": {
        "github_*": "allow",
        "jira_*": "allow",
        "notion_*": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "researcher": {
      "model": "github-copilot/gemini-3-pro-preview",
      "permission": {
        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",
        "jira_search": "allow",

        "notion_notion-search": "allow",
        "notion_notion-fetch": "allow",
        "notion_notion-get-comments": "allow",
        "notion_notion-get-teams": "allow",
        "notion_notion-get-users": "allow",
        "notion_notion-query-data": "allow",
        "notion_notion-get-self": "allow",
        "notion_notion-get-user": "allow",

        "slack_conversations_*": "allow",
        "slack_channels_list": "allow",
      },
    },
    "git": {
      "model": "github-copilot/claude-sonnet-4.5",
    },
    "creative": {
      "model": "github-copilot/claude-sonnet-4.5",
    },
  },
  "mcp": {
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "--network=none",
        "--memory=512m",
        "--cpus=1",
        "-v",
        "mcp-memory-work:/app/dist",
        "mcp/memory",
      ],
      "enabled": true,
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_TOKEN}",
      },
    },
    "jira": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true,
    },
    "notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp",
      "enabled": true,
    },
    "slack": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "--memory=512m",
        "--cpus=1",
        "-e",
        "SLACK_MCP_XOXC_TOKEN={env:SLACK_MCP_XOXC_TOKEN}",
        "-e",
        "SLACK_MCP_XOXD_TOKEN={env:SLACK_MCP_XOXD_TOKEN}",
        "ghcr.io/korotovsky/slack-mcp-server",
        "mcp-server",
        "--transport",
        "stdio",
      ],
      "enabled": true,
    },
  },
}
