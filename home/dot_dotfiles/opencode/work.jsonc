{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "permission": {
    // MCPs denied at global level - specialized agents get access
    "github_*": "deny",
    "jira_*": "deny",
    "notion_*": "deny",
  },
  "instructions": ["~/.dotfiles/opencode/rules/work.md"],
  "agent": {
    // Global agents: minimal, just for general queries
    "build": {
      "model": "github-copilot/claude-opus-4.5",
      "permission": {},
    },
    "plan": {
      "model": "github-copilot/claude-3.7-sonnet-thought",
      "permission": {},
    },

    // Specialized agents with MCP access
    "reviewer": {
      "permission": {
        // Read-only GitHub for PR reviews
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_pull_request_read": "allow",
        "github_issue_read": "allow",
        "github_search_*": "allow",
        // Read-only Jira for context
        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",
      },
    },
    "architect": {
      "permission": {
        // Read-only GitHub for design research
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_search_*": "allow",
        // Read-only Jira for requirements
        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",
        // Read-only Notion for design docs
        "notion_notion-search": "allow",
        "notion_notion-fetch": "allow",
        "notion_notion-get-comments": "allow",
        "notion_notion-get-teams": "allow",
        "notion_notion-get-users": "allow",
        "notion_notion-query-data": "allow",
        "notion_notion-get-self": "allow",
        "notion_notion-get-user": "allow",
      },
    },
    "devops": {
      "permission": {
        // Full GitHub for CI/CD workflows
        "github_*": "allow",
        "github_request_copilot_review": "deny",
      },
    },
    "writer": {
      "permission": {
        // Full GitHub for PR descriptions, release notes
        "github_*": "allow",
        "github_request_copilot_review": "deny",
        // Full Jira for issue updates, comments
        "jira_*": "allow",
        // Full Notion for documentation
        "notion_*": "allow",
      },
    },
    "researcher": {
      "permission": {
        // Read-only GitHub for code research
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_search_*": "allow",
        // Read-only Jira for issue research
        "jira_atlassianUserInfo": "allow",
        "jira_fetch": "allow",
        "jira_get*": "allow",
        "jira_lookup*": "allow",
        "jira_search*": "allow",
        "jira_search": "allow",
        // Read-only Notion for docs research
        "notion_notion-search": "allow",
        "notion_notion-fetch": "allow",
        "notion_notion-get-comments": "allow",
        "notion_notion-get-teams": "allow",
        "notion_notion-get-users": "allow",
        "notion_notion-query-data": "allow",
        "notion_notion-get-self": "allow",
        "notion_notion-get-user": "allow",
      },
    },
    "git": {
      "permission": {
        // Read-only GitHub for remote operations
        "github_get_*": "allow",
        "github_list_*": "allow",
        "github_pull_request_read": "allow",
        "github_search_*": "allow",
      },
    },
  },
  "mcp": {
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-v",
        "mcp-memory-work:/app/dist",
        "mcp/memory",
      ],
      "enabled": true,
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {file:~/.config/opencode/secrets/gh_pat}",
      },
    },
    "jira": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true,
    },
    "notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp",
      "enabled": true,
    },
  },
}
