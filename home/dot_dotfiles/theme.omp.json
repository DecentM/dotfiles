{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "transient_prompt": {
    "background": "transparent",
    "template": "{{ if .Root }}#{{ else }}➜{{ end }} ",
    "foreground": "#63F08C",
    "type": "session",
    "style": "plain",
    "foreground_templates": ["{{ if .Root }}#ff5555{{ end }}"]
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "foreground": "#c6ad3e",
          "background": "#29315A",
          "leading_diamond": "\ue0b6",
          "template": "{{ if .Root }}\uf0ad {{ end }}{{.Icon}} ",
          "style": "diamond",
          "type": "os",
          "foreground_templates": ["{{ if .Root }}#ff5555{{ end }}"]
        },
        {
          "options": {
            "style": "mixed"
          },
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": "\ue5ff {{ .Path }}",
          "foreground": "#3EC669",
          "background": "#29315A",
          "type": "path",
          "style": "diamond"
        },

        {
          "foreground": "#ff9500",
          "background": "#29315A",
          "template": "{{ if not (empty .Env.SSH_TTY) }}󰒍{{ end }}",
          "type": "text",
          "style": "diamond"
        },
        {
          "options": {
            "style": "mixed"
          },
          "foreground": "#c6ad3e",
          "background": "#29315A",
          "trailing_diamond": "\ue0b4 ",
          "template": " {{ if .Root }}root{{ else if not (empty .Env.SSH_TTY) }}{{ .UserName }}{{ end }}{{ if not (empty .Env.SSH_TTY) }}@{{ .HostName }}{{ end }}",
          "type": "session",
          "style": "diamond",
          "foreground_templates": ["{{ if .Root }}#ff5555{{ end }}"]
        },

        {
          "options": {
            "branch_template": "{{ trunc 25 .Branch }}",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "leading_diamond": " \ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "#43CCEA",
          "background": "#29315A",
          "type": "git",
          "style": "diamond",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ]
        },
        {
          "template": "x ",
          "foreground": "#C94A16",
          "type": "status",
          "style": "plain"
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#d4d4d4",
          "template": "󰔛 {{ .FormattedMs }} ",
          "options": {
            "threshold": 500,
            "style": "austin"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "kubectl",
          "style": "plain",
          "foreground": "#326CE5",
          "template": "󱃾 {{ .Context }}{{ if .Namespace }}::{{ .Namespace }}{{ end }} ",
          "options": {
            "parse_kubeconfig": true
          }
        },
        {
          "type": "docker",
          "style": "plain",
          "foreground": "#0db7ed",
          "template": " {{ .Context }} ",
          "options": {
            "display_mode": "context"
          }
        },
        {
          "options": {
            "display_mode": "files",
            "fetch_package_manager": true,
            "fetch_version": true,
            "npm_icon": "<#e5272d>\ue616 npm</> ",
            "pnpm_icon": "<#e5a100>\udb80\udec1 pnpm</> ",
            "yarn_icon": "<#37aee5>\ue6a7 yarn</> "
          },
          "template": "{{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}\ue718 {{ .Full }}",
          "foreground": "#88e570",
          "type": "node",
          "style": "plain"
        },
        {
          "options": {
            "display_mode": "files",
            "fetch_version": true
          },
          "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }}",
          "foreground": "#4063D8",
          "type": "crystal",
          "style": "plain"
        },
        {
          "options": {
            "display_mode": "files",
            "fetch_version": true
          },
          "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }}",
          "foreground": "#DE3F24",
          "type": "ruby",
          "style": "plain"
        },
        {
          "options": {
            "display_mode": "files",
            "fetch_virtual_env": true
          },
          "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }}{{ if .Venv }} ({{ .Venv }}){{ end }}",
          "foreground": "#FED142",
          "type": "python",
          "style": "plain"
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "#6272a4",
          "template": " {{ .Name }} "
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#6272a4",
          "template": " {{ .CurrentDate | date .Format }}",
          "options": {
            "time_format": "15:04"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "{{ if .Root }}#{{ else }}➜{{ end }} ",
          "foreground": "#63F08C",
          "type": "session",
          "style": "plain",
          "foreground_templates": ["{{ if .Root }}#ff5555{{ end }}"]
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
